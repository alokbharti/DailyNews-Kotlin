<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/news_item_fl"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:id="@+id/graduation_card"
        android:orientation="vertical"
        android:background="@drawable/round_shape"
        android:backgroundTint="@color/grayLight"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/medium_margin"
        app:cardCornerRadius="7dp"
        app:cardElevation="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/graduation_image_iv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:src="@drawable/graduation_cap"
                android:scaleType="fitXY"
                android:layout_weight="3"
                android:background="@color/white"/>

            <TextView
                android:id="@+id/graduation_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/small_margin"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="@dimen/xxlarge_text"
                android:fontFamily="@font/avenir"
                android:textStyle="bold"
                tools:text = "This is title for news article"/>

            <!--<TextView
                android:id="@+id/graduation_source_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/small_margin"
                android:layout_marginBottom="@dimen/small_margin"
                android:textSize="@dimen/medium_text"
                tools:text="click on the cards for more at Hindustan Times"/>-->
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>